<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.library.dao.OrderDao">

	<resultMap type="OrderBean" id="OrderResult">
		<id column="code" jdbcType="VARCHAR" property="id"/>
		<result column="name" jdbcType="VARCHAR" property="name"/>
		<result column="otime" jdbcType="TIMESTAMP" property="orderTime"/>
		<result column="ctime" jdbcType="TIMESTAMP" property="confirmTime"/>
		<result column="sid" jdbcType="VARCHAR" property="sid"/>
		<result column="uid" jdbcType="VARCHAR" property="uid"/>
		<result column="description" jdbcType="VARCHAR" property="description"/>
		<result column="state" jdbcType="INTEGER" property="state"/>
	</resultMap>

	<sql id="Base_SQL">
		code,name,otime,ctime,sid,uid,description,state
	</sql>
	
	<sql id="Insert_SQL">
		(code,name,otime,ctime,sid,uid,description,state)
	</sql>
	
	<select id="selectOrderById" parameterType="string" resultMap="OrderResult">
		select <include refid="Base_SQL"/> 
		from t_order
		where 
		code=#{id}
	</select>
	
	<select id="queryAll" resultMap="OrderResult">
		select <include refid="Base_SQL"/> 
		from t_order
	</select>
	
	<select id="selectInvalidateOrders" resultMap="OrderResult">
		select <include refid="Base_SQL"/> 
		from t_order
		where 
		time_to_sec(timediff(now(), otime))&gt;60*5
		and 
		state=0
		
	</select>
	
	<select id="selectInvalidateTest" resultType="Integer">
		select time_to_sec(timediff(now(), otime)) as a
		from t_order
	</select>
	
	<select id="selectOrder" parameterType="OrderBean" resultMap="OrderResult">
	select <include refid="Base_SQL"/> 
		from t_order
		where 
		sid=#{sid} 
		and 
		uid=#{uid}
		and 
		name=#{name}
		and
		state=0
		and 
		DATE_FORMAT(#{now()},'%Y %M %d')-DATE_FORMAT(otime,'%Y %M %d')
	</select>
	
	<select id="selectOrderByUidAndSid" parameterType="OrderBean" resultMap="OrderResult">
		select <include refid="Base_SQL"/> 
		from t_order
		where 
		sid=#{sid} 
		and 
		uid=#{uid}
		and 
		DATE_FORMAT(#{confirmTime},'%Y %M %d %H %i %s')-DATE_FORMAT(otime,'%Y %M %d %H %i %s')&gt;-1
		and
		DATE_FORMAT(#{confirmTime},'%Y %M %d %H %i %s')-DATE_FORMAT(otime,'%Y %M %d %H %i %s')&lt;10  
		and
		state=0
	</select>
	
	<select id="queryOrdersByUId" parameterType="string" resultMap="OrderResult">
		select <include refid="Base_SQL"/> 
		from t_order 
		where 
		uid=#{uid}
	</select>

	
	<insert id="insertOrder" parameterType="OrderBean">
		<selectKey keyProperty="id" resultType="String" order="BEFORE">
			select replace(uuid(),'-','') from dual
		</selectKey>

		insert into t_order
			<include refid="Insert_SQL" />
		values
			(
			#{id,jdbcType=VARCHAR},
			#{name,jdbcType=VARCHAR},
			#{orderTime,jdbcType=TIMESTAMP},
			#{confirmTime,jdbcType=TIMESTAMP},
			#{sid,jdbcType=VARCHAR},
			#{uid,jdbcType=VARCHAR},
			#{description,jdbcType=VARCHAR},
			#{state,jdbcType=INTEGER}
			)
	</insert>
	
	<update id="updateConfirmTime" parameterType="OrderBean">
		update t_order set ctime=#{confirmTime} ,state=1
		where 
		code=#{id}
		and 
		uid=#{uid}
	</update>
	
</mapper>